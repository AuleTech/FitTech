    {
        public string? Nombre { get; set; }
        public string? Apellidos { get; set; }
        public string? Cumpleaños { get; set; }
        public string? Email { get; set; }
        public string? Subscripcion { get; set; }
        public string? Modalidad { get; set; }
        public int? Horas { get; set; }
    }

    public List<Producto> Productos { get; set; } = new()
    {
        new Producto { Nombre = "Yeray", Apellidos = "Blanco Aldao", Cumpleaños = "27-11-1991", Email = "fitTech@hotmail.com", Subscripcion = "Perdida de peso", Modalidad = "Online", Horas=12},
        new Producto { Nombre = "Jairo", Apellidos = "Blanco Aldao", Cumpleaños = "27-11-1991", Email = "fitTech@hotmail.com" , Subscripcion ="Aumento masa muscular", Modalidad = "Online",Horas=12},
