@using FitTech.WebComponents.Pages.CustomerManager.CustomerManagerModels;

<div>
    <div class="mb-4">
        <label for="firstName" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Nombre:</label>
        <label for="firstName" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.NameUser</label>
    </div>
    <div class="mb-4">
        <label for="lastName" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Apellidos:</label>
        <label for="lastname" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.LastNameuser</label>
    </div>
    <div class="mb-4">
        <label for="email" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Correo Electrónico:</label>
        <label for="email" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.EmailUser</label>
    </div>
    <div class="mb-4">
        <label for="birthday" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Fecha de Nacimiento:</label>
        <label for="birthday" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.Birthdate</label>
    </div>
    <div class="mb-4">
        <label for="phonenumber" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Teléfono:</label>
        <label for="phonenumber" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.PhoneNumber</label>
    </div>
    <div class="mb-4">
        <label for="subscriptiontype" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Tipo de Subscripción:</label>
        <label for="subscriptiontype" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.SubscriptionType</label>
    </div>
    <div class="mb-4">
        <label for="trainingHours" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Horas de entrenamiento contratados:</label>
        <label for="trainingHours" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.TrainingHours</label>
    </div>
    <div class="mb-4">
        <label for="trainingModel" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Modalidad de Entrenamiento:</label>
        <label for="trainingModel" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.TrainingModel</label>
    </div>
    <div class="mb-4">
        <label for="evento" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Fecha Límita o Evento:</label>
        <label for="evento" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.Event</label>
    </div>
    <div class="mb-4">
        <label for="center" class="mb-2 block text-sm font-bold text-green-600 dark:text-gray-300">Centro deportivo para entrenamiento conjunto:</label>
        <label for="center" class="mb-2 block text-sm font-bold text-gray-700 dark:text-gray-300">@Model.Center</label>
    </div>

</div>

@code {
    [Parameter]
    public required NewClientModel Model { get; set; }
    
    protected override void OnInitialized()
    {
        Model ??= new NewClientModel();
    }

    public void Submit()
    {
        // 
    }
    
}