@using Blazor.Heroicons
@using FitTech.WebComponents.Components.AppHeader
@inject AppHeaderStateHandler AppHeaderStateHandler
@inject NavigationManager NavigationManager

<div class="p-6" style="margin-left: 250px;"> 
    <div class="flex flex-wrap items-center justify-between bg-white rounded-t-lg p-4 shadow-md mb-2">
        <h2 class="text-2xl font-bold text-gray-900">GESTOR DE CLIENTES</h2>
        <div class="relative w-64">
            <input type="text" placeholder="Buscar" class="w-full border border-gray-300 rounded-full py-2 pl-4 pr-10 focus:outline-none focus:ring-2 focus:ring-green-700" />
            <svg xmlns="http://www.w3.org/2000/svg" class="absolute right-3 top-2.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </div>
    </div>

    <!-- Tabla -->
    <table class="min-w-full bg-white rounded-b-lg shadow overflow-hidden">
        <thead class="bg-zinc-900 text-left text-gray-300 font-semibold rounded-t-lg">
            <tr>
                <th class="px-6 py-3 border-b border-gray-200 cursor-pointer">Nombre</th>
                <th class="px-6 py-3 border-b border-gray-200 cursor-pointer">Apellidos</th>
                <th class="px-6 py-3 border-b border-gray-200 cursor-pointer">Fecha de Nacimiento</th>
                <th class="px-6 py-3 border-b border-gray-200 cursor-pointer">Email</th>
                <th class="px-6 py-3 border-b border-gray-200 cursor-pointer">Subscripción</th>
                <th class="px-6 py-3 border-b border-gray-200 cursor-pointer">Modalidad de Entrenamiento</th>
                <th class="px-6 py-3 border-b border-gray-200 cursor-pointer">Horas de entrenamiento contratadas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Productos)
            {
                <tr class="hover:bg-gray-50 border-b border-gray-200">
                    <td class="px-6 py-4 text-gray-700">@producto.Nombre</td>
                    <td class="px-6 py-4 text-gray-700">@producto.Apellidos</td>
                    <td class="px-6 py-4 text-gray-700">@producto.Cumpleaños</td>
                    <td class="px-6 py-4 text-gray-700">@producto.Email</td>
                    <td class="px-6 py-4 text-gray-700">@producto.Subscripcion</td>
                    <th class="px-6 py-4 text-gray-700">@producto.Modalidad</th>
                    <th class="px-6 py-4 text-gray-700">@producto.Horas</th>
                    
                    <td class="px-6 py-4 text-gray-700 flex space-x-3 justify-center">
                        <button title="Editar" class="text-gray-600 hover:text-gray-900 transition">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                            </svg>
                        </button>
                        <button title="Eliminar" class="text-gray-600 hover:text-gray-900 transition">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="bg-gray-100">
                <td colspan="5" class="px-6 py-3 text-gray-600 text-sm font-medium">
                    Total de filas: @Productos.Count
                </td>
            </tr>
        </tfoot>
    </table>
</div>

