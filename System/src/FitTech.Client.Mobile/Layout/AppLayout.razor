@using FitTech.Client.Mobile.Components.Menu
@inherits LayoutComponentBase
@inject IJSRuntime JsRuntime
<div class="bg-gray-100 dark:bg-gray-900 transition-colors duration-300" style="min-height: calc(100vh - 62px);">
    <!-- Scrollable content with bottom padding to avoid overlap -->
    <div class="pb-20" >
        @Body
    </div>

    <!-- Fixed bottom nav that overlays the content -->
    <MobileMenu/>
</div>

@code
{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("addTouchStartGlobalEvent");
        }
    }
}
